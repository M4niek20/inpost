{% extends 'base.html.twig' %}

{% block title %}InPost dashboard{% endblock %}

{% block body %}
  <h1>Products</h1>
  {% if products %}
  <table id="products" class="table table-striped table-bordered">
    <thead>
      <th>Name</th>
      <th>Barcode</th>
      <th style="width:1px"></th>
      <th style="width:1px"></th>
    </thead>
    <tbody>
    {% for product in products %}
      <tr>
        <td>{{ product.name }}</td>
        <td>{{ product.barcode }}</td>
        <td style="width:1px">
          <a href="/products/show/{{ product.id }}">
            <button type="button" class="btn btn-dark">
              details
            </button>
          </a>
        </td>
        <td style="width:1px">
          <button type="button" class="btn btn-danger" data-id="{{ product.id }}">
            delete
          </button>
        </td>
      </tr>
    {% endfor %}
    <tr>
      <td colspan="4" class="text-center">
        <a href="create">Add new product</a>
      </td>
    </tr>
    </tbody>
  </table>
  {% else %}
    <p> No products. <a href="create">Add new product.</a></p>
  {% endif %}

{% endblock %}

{% block javascripts %}
<script src="{{ asset('scripts/deleteProduct.js') }}"></script>
{% endblock %}