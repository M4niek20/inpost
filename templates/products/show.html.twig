{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
  <h1>Product info</h1>
  <p>id: {{ product.id }}</p>
  <p>Name: {{ product.name }}</p>
  <p>Barcode: {{ product.barcode }}</p>
  <h2>Owners</h2>
  {% if product.getProducts %}
  <ul>
    {% for productOwner in product.getProducts %}
      <li>{{ productOwner.getOwner.getName }}</li>
    {% endfor %}
    </ul>
  {% else %}
    <p>No owners.</p>
  {% endif %}
  <hr/>
  <a href="/">Go back</a>
{% endblock %}