{% extends 'base.html.twig' %}

{% block title %} Find expired products {% endblock %}

{% block body %}
  <h1>Find expired products for owner</h1>
  {{ form_start(form) }}
  {{ form_widget(form) }}
  {{ form_end(form) }}
  <hr/>
  {% if products is defined %}
    {% if products %}
      <h2>Found expired products!</h2>
      <table class="table table-striped table-bordered">
        <thead>
          <th>Product name</th>
          <th>stock id</th>
          <th>expired date</th>
        </thead> 
        <tbody>
        {% for product in products %}
          <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.id }}</td>
            <td>{{ product.expiration_date }}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>No expired products.</p>
    {% endif %}
  {% endif %}
  <a href="/owners">Go back</a>
{% endblock %}