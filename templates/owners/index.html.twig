{% extends 'base.html.twig' %}

{% block title %}Owners{% endblock %}

{% block body %}
    <h1>List of owners</h1>
    {% if owners %}
        <table class="table table-striped table-bordered">
            <thead>
                <th>id</th>
                <th>Name</th>
                <th style="width:1px"></th>
            </thead>
            <tbody>
                {% for owner in owners %}
                <tr>
                    <td>
                        {{ owner.id }}
                    </td>
                    <td>
                        {{ owner.name }}
                    </td>
                    <td style="width:1px">
                        <a href="/owners/show/{{ owner.id }}">
                            <button type="button" class="btn btn-dark">
                            details
                            </button>
                        </a>
                    </td>
                </tr>
                {% endfor %}
                <tr>
                    <td colspan="3" class="text-center">
                        <a href="create">Add new owner.</a>
                    </td>
                </tr>
            </tbody>
        </table>
    {% else %}
    <p> No owners. <a href="create">Add new owner.</a></p>
    {% endif %}
    <hr/>
    <a href="/">Go back</a>
{% endblock %}